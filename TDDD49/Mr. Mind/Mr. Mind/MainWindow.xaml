<Window x:Class="Mr.Mind.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mr. Mind" Height="615" Width="815">
    <Grid Background="Black">
        <Button HorizontalAlignment="Center"  Name="PvP" Width="200" Height="105" Margin="290,10,290,445">
            <Image Source="Res/Images/Buttons/pvp.png"/>
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Background" Value="Black"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>

        <Button HorizontalAlignment="Center"  Name="PvE" Width="200" Height="105" Margin="290,120,290,335">
